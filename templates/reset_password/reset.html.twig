{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<section>
		<h1 class="text-3xl text-center mt-6 font-bold">Reset your password</h1>
		<div class="flex justify-center flex-wrap items-center px-6 py-12 max-w-6xl mx-auto">
			<div class="md:w-[67%] lg:w-[50%] mb-12 md:mb-6">
				<img src="https://images.unsplash.com/flagged/photo-1564767609342-620cb19b2357?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1373&q=80" alt="key" class="w-full rounded-2xl"/>
			</div>
			<div class="w-full md:w-[67%] lg:w-[40%] lg:ml-20">
				{% if form_errors(resetForm) %}
					<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
						{{ form_errors(resetForm) }}
					</div>
				{% endif %}

				{{ form_start(resetForm) }}
				<div class="relative mb-6">
					{{ form_widget(resetForm.plainPassword.first, {attr: {class: "w-full px-4 py-2 text-xl text-gray-700 bg-white border-gray-300 rounded transition ease-in-out", placeholder: "New Password"}}) }}
					{{ form_widget(resetForm.plainPassword.second, {attr: {class: "w-full px-4 py-2 text-xl text-gray-700 bg-white border-gray-300 rounded transition ease-in-out", placeholder: "Confirm New Password"}}) }}
				</div>
				<button class="w-full bg-blue-600 text-white px-7 py-3 text-sm font-medium uppercase rounded shadow-md hover:bg-blue-700 transition duration-150 ease-in-out hover:shadow-lg active:bg-blue-800" type="submit">
					Reset password
				</button>
				{{ form_end(resetForm) }}
			</div>
		</div>
	</section>
{% endblock %}
