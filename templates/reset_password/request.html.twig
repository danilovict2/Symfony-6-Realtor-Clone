{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<section>
		<h1 class="text-3xl text-center mt-6 font-bold">Forgot Password</h1>
		<div class="flex justify-center flex-wrap items-center px-6 py-12 max-w-6xl mx-auto">
			<div class="md:w-[67%] lg:w-[50%] mb-12 md:mb-6">
				<img src="https://images.unsplash.com/flagged/photo-1564767609342-620cb19b2357?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1373&q=80" alt="key" class="w-full rounded-2xl"/>
			</div>
			<div class="w-full md:w-[67%] lg:w-[40%] lg:ml-20">
                {% if form_errors(requestForm) %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
						{{ form_errors(requestForm) }}
					</div>
                {% endif %}

				{{ form_start(requestForm) }}
				{{ form_widget(requestForm.email, {attr: {class: "mb-6 w-full px-4 py-2 text-xl text-gray-700 bg-white border-gray-300 rounded transition ease-in-out", placeholder: "Email address"}}) }}
				<div class="flex justify-between whitespace-nowrap text-sm sm:text-lg">
					<p class="mb-6">
						Don't have a account?
						<a href="{{ path('app_register') }}" class="text-red-600 hover:text-red-700 transition duration-200 ease-in-out ml-1">
							Register
						</a>
					</p>
					<p>
						<a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-800 transition duration-200 ease-in-out">
							Sign in instead
						</a>
					</p>
				</div>
				<button class="w-full bg-blue-600 text-white px-7 py-3 text-sm font-medium uppercase rounded shadow-md hover:bg-blue-700 transition duration-150 ease-in-out hover:shadow-lg active:bg-blue-800" type="submit">
					Send reset password
				</button>

				{{ form_end(requestForm) }}
			</div>
		</div>
	</section>
{% endblock %}
