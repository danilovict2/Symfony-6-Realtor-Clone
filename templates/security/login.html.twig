{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<section>
		<h1 class="text-3xl text-center mt-6 font-bold">Sign In</h1>
		<div class="flex justify-center flex-wrap items-center px-6 py-12 max-w-6xl mx-auto">
			<div class="md:w-[67%] lg:w-[50%] mb-12 md:mb-6">
				<img src="https://images.unsplash.com/flagged/photo-1564767609342-620cb19b2357?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1373&q=80" alt="key" class="w-full rounded-2xl"/>
			</div>
			<div class="w-full md:w-[67%] lg:w-[40%] lg:ml-20">
				<form method="POST">
					<input placeholder="Email address" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mb-6 w-full px-4 py-2 text-xl text-gray-700 bg-white border-gray-300 rounded transition ease-in-out" autocomplete="email" required autofocus>
					<div class="relative mb-6">
						<input placeholder="Password" type="password" name="password" id="inputPassword" class="w-full px-4 py-2 text-xl text-gray-700 bg-white border-gray-300 rounded transition ease-in-out" autocomplete="current-password" required>
					</div>
					<div class="flex justify-between whitespace-nowrap text-sm sm:text-lg">
						<p class="mb-6">
							Don't have a account?
							<a href="{{ path('app_register') }}" class="text-red-600 hover:text-red-700 transition duration-200 ease-in-out ml-1">
								Register
							</a>
						</p>
						<p>
							<a href="{{ path('app_forgot_password_request') }}" class="text-blue-600 hover:text-blue-800 transition duration-200 ease-in-out">
								Forgot password?
							</a>
						</p>
					</div>
					<button class="w-full bg-blue-600 text-white px-7 py-3 text-sm font-medium uppercase rounded shadow-md hover:bg-blue-700 transition duration-150 ease-in-out hover:shadow-lg active:bg-blue-800" type="submit">
						Sign in
					</button>
				</form>
			</div>
		</div>
	</section>
{% endblock %}
